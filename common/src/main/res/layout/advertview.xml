<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ViewGroupAppTheme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/advertview_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_small"
            android:textSize="@dimen/subtitle_text_size_large"
            android:text="--"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/TextViewAppTheme"
            />
        <Button
            android:id="@+id/advertview_label"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_small"
            android:textSize="@dimen/subtitle_text_size_large"
            android:text="@string/msg_pleasewait"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/advertview_countdown"
            android:layout_toEndOf="@+id/advertview_countdown"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/advertview_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_small"
            android:textSize="@dimen/subtitle_text_size"
            android:text="--"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/TextViewAppTheme"
            />
        <Button
            android:id="@+id/advertview_nomoreadverts_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_small"
            android:textSize="@dimen/subtitle_text_size"
            android:text="@string/msg_stop_adverts"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/advertview_placeholder"
            android:layout_toEndOf="@+id/advertview_placeholder"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/advertview_display_scrollview"
        android:layout_weight="7"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:fillViewport="true">
        <WebView
            android:id="@+id/advertview_display"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_nofeed"
            style="@style/WebViewAppTheme"/>
    </ScrollView>    
</LinearLayout>

