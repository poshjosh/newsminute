<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="@style/ViewGroupAppTheme">
    <Spinner 
        android:id="@+id/selectloglevel_loglevelspinner"
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/selectloglevel_logtagspinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/selectloglevel_okbutton"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:text="@string/msg_ok"/>
        <Button
            android:id="@+id/selectloglevel_skipbutton"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_skip"/>
</LinearLayout>